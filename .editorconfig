root = true

[*]
charset                  = utf-8
end_of_line              = lf
indent_style             = space
trim_trailing_whitespace = true
insert_final_newline     = true

[*.{cs,shader,cginc,xml}]
indent_size = 4

[*.{sh}]
indent_size = 2

[*.{go}]
indent_size = 4
indent_style = tab

[Jenkinsfile]
indent_size = 2
